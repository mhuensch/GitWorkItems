<UserControl x:Class="Run00.GitWorkItems.Views.Explorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
						 xmlns:view="clr-namespace:Run00.GitWorkItems.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<StackPanel>
		<UniformGrid Margin="0, 10, 0, -10">
				<TextBlock HorizontalAlignment="Center"  FontSize="14">
					<Hyperlink RequestNavigate="OnNewWorkItemClicked" NavigateUri="WorkItem" >New Work Item</Hyperlink>
				</TextBlock>
				<TextBlock HorizontalAlignment="Center" FontSize="14">
					<Hyperlink RequestNavigate="OnNewItemQueryClicked" NavigateUri="ItemQuery">New Item Query</Hyperlink>
				</TextBlock>
		</UniformGrid>

		<Separator />

		<view:QueryDashboardList x:Name="Dashboard" />

		<Separator Margin="0, 6, 0, 7"/>
		
		<view:QueryList x:Name="LocalQueries" />
		<view:QueryList x:Name="SharedQueries" />
	</StackPanel>
</UserControl>
